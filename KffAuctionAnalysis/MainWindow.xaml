<Window x:Class="KffAuctionAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KffAuctionAnalysis"
        xmlns:views="clr-namespace:KffAuctionAnalysis.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Margin="5" Text="{Binding Status, StringFormat={}Status: {0}}" HorizontalAlignment="Center" />
        <TextBlock DockPanel.Dock="Top" Margin="5" Text="{Binding SimCount, StringFormat={}Simulations: {0}}" HorizontalAlignment="Center" />
        <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button" x:Key="MainViewButton">
                    <Setter Property="Margin" Value="10" />
                </Style>
            </StackPanel.Resources>
            <Button Click="Load_Click" Name="LoadButton">
                Load Auction
            </Button>
            <Button Click="Start_Click" Name="StartButton" IsEnabled="False">
                Start Auction
            </Button>
        </StackPanel>

        <Grid Name="MainGrid">
            
        </Grid>
    </DockPanel>
    
</Window>
