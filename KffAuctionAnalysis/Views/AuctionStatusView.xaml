<UserControl x:Class="KffAuctionAnalysis.Views.AuctionStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KffAuctionAnalysis.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UniformGrid Columns="2" VerticalAlignment="Center">
        <UniformGrid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="10,10,10,0" />
            </Style>
        </UniformGrid.Resources>
        <TextBlock>Auction Status:</TextBlock>
        <TextBlock Text="{Binding Status}" />

        <TextBlock>Stage:</TextBlock>
        <TextBlock Text="{Binding Stage}" />

        <TextBlock>Round:</TextBlock>
        <TextBlock Text="{Binding Round}" />

        <TextBlock>Revenue:</TextBlock>
        <TextBlock Text="{Binding Revenue}" />

        <TextBlock>FSR Reached:</TextBlock>
        <TextBlock Text="{Binding IsFSRMet}" />
    </UniformGrid>
</UserControl>
